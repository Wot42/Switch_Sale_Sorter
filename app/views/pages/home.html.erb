<div>
  <% if !user_signed_in?%>
  <%= render "shared/banner" %>
  <% else%>
    <div class="m-4 d-flex justify-content-around">
      <%= render "shared/users_list"%>
    </div>
    <div class="d-flex justify-content-center text-white"><h2>CATALOGUE</h2></div>
    <div class="mt-5">
      <div class="game-cards">
        <% @games.each do |game| %>
        <%= render "shared/card_base", game: game  %>
        <% end %>
      </div>
    </div>
    <%end %>
</div>




