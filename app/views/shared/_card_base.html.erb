
<div class="fullclick">
  <div class="card">

    <img src =<%= game.pic %> class="card-img-top">
      <h5 class="card-title" style="font-weight: 1000"><%= game.title %></h5>

    <div class="w-100 d-flex justify-content-between">
        <p class="card-text" style="font-weight: 650">Price: £<%= game.price %></p>
        <p class="card-text" style="font-weight: 650">Sale Price £<%= game.sale_price %></p>
      </div>

      <p class="card-tagline"><%= game.tagline %> </p>



    <div class="w-100 d-flex justify-content-between">
        <a href=<%="https://www.nintendo.co.uk#{game.url}"%>><button type="button" class="btn btn-danger">Go to Store</button></a>
        <%= link_to "Bun this", root_path, class: "btn btn-danger" %>
      </div>

  </div>
</div>
