<div class="fullclick">
  <div class="card">
    <%= link_to render "shared/card_modal", game_id: game.id do %>
      <img src =<%= game.pic %> class="card-img-top">
    <%end %>

    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal<%= game.id %>">
  Launch demo modal
</button>
<div class="modal fade" id="exampleModal<%= game.id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">

  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"><%= game.title %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
      <iframe src="http://localhost:3000/games/<%= game.id %>" frameborder="0">
        <% %>
        </iframe>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

    <h5 class="card-title"><%= game.title %></h5>

    <div class="w-100 d-flex justify-content-between">
        <p class="card-text" style="font-weight: 650">Price: £<%= game.price %></p>
        <p class="card-text" style="font-weight: 650">Sale Price £<%= game.sale_price %></p>
      </div>

    <div class="w-100 d-flex justify-content-between">
        <%=link_to "Go to Store", "https://www.nintendo.co.uk#{game.url}", class: "card-button", target: :_blank %>
         <% if active %>
        <%= link_to "Bun this", ban_path(game), class: 'card-button', data: {'turbo-method' => :post} %>
        <% end %>
        <% if ban %>
        <% hammer_id = 0 %>
        <% hammers = game.BanHammers %>
        <% hammers.each do |hammer| %>
        <% hammer_id = hammer.id if hammer.user == @user %>
        <% end %>
        <%= link_to "Restore", restore_path(hammer_id), class: 'card-button', data: {'turbo-method' => :delete} %>
        <% end %>
    </div>
  </div>
</div>




